{
    "compilerOptions": {
		"lib": ["ES2022"],
		"target": "ES2022",
		"module": "ES2022",
		"allowJs": true,
		"checkJs": true,

		/* Bundler mode */
		// "moduleDetection":"legacy",
		"moduleResolution": "NodeNext",
		// "allowImportingTsExtensions": true,
		// "verbatimModuleSyntax": true,
		// "noEmit": true,

		/* Linting */
		"noFallthroughCasesInSwitch": true,
		"strict": true,
		"noImplicitAny": false,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",

		"typeRoots": [
			"./types/ags.d.ts",
			"./node_modules/@girs"
		]
	}
}
