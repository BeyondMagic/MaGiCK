	makepkg -si \
		&& makepkg --printsrcinfo > .SRCINFO \
		&& cp .SRCINFO PKGBUILD -t ~/Git/Projects/ninecath/nincat-aur \
		&& cd ~/Git/Projects/ninecath/nincat-aur \
		&& git add . \
		&& git commit \
