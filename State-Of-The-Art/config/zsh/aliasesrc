# Start a new template for latex.
start_latex() {
  cp -rf "$HOME/Storage/Linux/Latex Template/" ./"$@"
}

# Split a video in half using ffmpeg.
splitvideo() {
  ffmpeg -i "$1" -c copy -map 0 -segment_time "$3" -f segment -reset_timestamps 1 "$2"
}

#
lyrics() {

  iris $@ lyrics \
    | awk '$1 == "GoogleLyrics" { $1=""; print substr($0,2) }'

}

jlyrics() {

  jiris $@ 歌詞 \
    | awk '$1 == "GoogleLyrics" { $1=""; print substr($0,2) }'

}

# Mount windows drivers.
windows () {

  doas -- mount \
    -o umask=0,uid=nobody,gid=nobody \
    "/dev/sda3" \
    /mnt/drive

  doas -- mount \
    -o umask=0,uid=nobody,gid=nobody \
    "/dev/sdb4" \
    /mnt/windows

}

# Load pendrive
pendrive () {

  # Try to mount the pendrive.
  doas -- mount \
    -o umask=0,uid=nobody,gid=nobody \
    "$1" \
    /mnt/pendrive

  # If mount worked out fine.
  if [ "$?" = 0 ]; then

    # Go to the directory.
    cd /mnt/pendrive

    # Open file manager.
    n /mnt/pendrive

  fi
}

# Find cover images from Google (opening a new tab on your browser)
findimage() {

  xdg-open "https://www.google.com/search?as_st=y&tbm=isch&hl=en-GB&as_q=$@ cover&as_epq=&as_oq=&as_eq=&cr=&as_sitesearch=&safe=images&tbs=iar:s"

}

#
magic_gif_crop_center() {

  # .
  convert "$1" -coalesce -repage 0x0 -gravity center -crop "$2"+0+0 +repage "$3"

  # .

}

eww_clear () {

  # A. Match the processes started below.
  for pid in $(pgrep -f "\-daemon\-"); do
    pkill -P $pid
    kill -- $pid
  done

}

eww_reset_daemons () {

  #eww_clear()

  # A. Match the processes started below.
  for pid in $(pgrep -f "\-daemon\-"); do
    pkill -P $pid
    kill -- $pid
  done

  # B. Start daemons (processes).
  nohup ~/.config/eww/executable/dwm-daemon-tags.sh >/dev/null 2>&1 &
  nohup ~/.config/eww/executable/dwm-daemon-layout.sh >/dev/null 2>&1 &
  nohup ~/.config/eww/executable/dwm-daemon-title.sh >/dev/null 2>&1 &
  #nohup ~/.config/eww/executable/mpd-daemon-song.sh >/dev/null 2>&1 &
  nohup ~/.config/eww/executable/eww-iris-weather.sh >/dev/null 2>&1 &

}

# Use YT-DLP with normal format.
dlp () {

  # A.
  rest="$(echo $@ | awk '{ $1=""; print substr($0,2) }')"

  # B. Make sure it has a normal filename,
  [ "$rest" ] || rest='名前知らない'

  # C.
  yt-dlp "$1" -o "$rest.%(ext)s"

}

# Get key_s name for dwm
get_keyname() {

  xev | awk -F'[ )]+' '/^KeyPress/ { a[NR+2] } NR in a { printf "%-3s %s\n", $5, $8 }'

}

# Add cover from an image file to a song
coverfrom() {

  ffmpeg \
    -i "$2" \
    -i "$1" \
    -map 0:0 \
    -map 1:0 \
    -c copy \
    -id3v2_version 3 \
    -metadata:s:v title='Album cover' \
    -metadata:s:v comment='Cover (front)' \
    new-"$2"

}

# Grep recursively on the current directory with the match.
find_here () {

  grep -r $@ *

}

# Change the mode of the command-line to show less.
mode () {
  if [ "$1" = "competitive" ]; then
    PS1="%B%F{grey}%1d %(?..%F{red})$PS1_SYMBOL  %b%F{grey}"
  else
    PS1="%B%F{grey}%~ %(?..%F{red})$PS1_SYMBOL  %b%F{grey}"
  fi
}

